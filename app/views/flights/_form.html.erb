    <%= f.label :plane %><br>
    <%= f.select :plane, Plane.all.map {|plane| [plane.model, plane.id]}, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin %>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.text_field :destination %>
  </div>
  <div class="field">
    <%= f.label :departure %><br>
    <%= f.datetime_select :departure %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


